<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.ucd.email" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CreateEmailActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadEmailActivity"
            android:label="@string/title_activity_read_email"
            android:parentActivityName=".CreateEmailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.ucd.email.CreateEmailActivity" />
        </activity>
    </application>

</manifest>
